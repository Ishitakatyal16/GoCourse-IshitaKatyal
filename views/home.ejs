<div id="parent">
  <div id="home-container">
    <section id="feed-posts">
        <div id="heading">
      <h2>Suggest Courses</h2>
    </div>

    <br>
<br>
    <div id="course-desc">
      <span id="text">Help your friends in choosing the right course for them!</span>
      <% if(locals.user){ %>
      <form
        action="/posts/create"
        id="new-post-form"
        method="POST"
        enctype="multipart/form-data"
      >
     
        <textarea
          placeholder="Give description about the course.."
          id="textarea"
          name="content"
          cols="40"
          rows="3"
          required
        ></textarea>
        <br /><br />
        <input type="file" name="post_image" placeholder="Post" />

        <input id ="course_post"type="submit" value="Upload" />
      </form>
      <% } %>
    </div>
      <br>
<br>

      <div id="posts-list-container">
        <p>
           <h3> Recommended Courses</h3>
        </p>
        
        <ul>
          <% for(post of posts){ %> <%- include('_posts') -%> <% } %>
        </ul>
      </div>
    </section>

    <section id="user-friends">
      <!-- <% if(currUser && currUser.friends.length){ %>
