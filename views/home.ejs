      <div id="friends-box"> 
      <h6>Friends</h6>
   

     <div id="len"> (<%= currUser.friends.length %>) </div>
     
     <% for(friendx of currUser.friends){%>
      <div id="friends-name">
        <p id="friend-block">
 
        <a href="users/profile/<%=friendx.to.id%>">
          <img src="<%=friendx.to.avatar %>" id="friend-pic">
         <span class ="leaderboard__name"><%= friendx.to.name %></span>
        </a>
      </p>
    </div>
      <%}%>
    </div>

    <br>
    <div id="users-box">
      <div id="users-list">
        <h6>Users</h6>
        <br>


        <% for(u of all_users) { %>

        <p id="users-block">
          <a href="/users/profile/<%= u.id %>">
            <img src="<%= u.avatar %>" id="user-pic">
            <span class ="user__name"><%= u.name %></span>
          
          </a>
        </p>

        <% } %>
      </div>

    </div>

   
    </section>

    <section id="chat-box"><%- include('_chat_box') -%></section>
  </div>
</div>

